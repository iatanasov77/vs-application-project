{% extends "base.html.twig" %}

{% block javascripts %}
	{{ encore_entry_script_tags( 'js/home', null, 'ApplicationThemeWithRegistrationAndProfile' ) }}
{% endblock %}

{% block content %}
    <div class="limiter">
		<div class="container-login100" style="background-image: url('build/test-theme/images/application-login-page/bg-01.jpg');">
			<div class="wrap-login100 p-t-30 p-b-50">
				<span class="login100-form-title p-b-41">
					Wellcome to {{ applicationTitle }}
				</span>
				<div class="p-b-33 p-t-5">
					<div class="container-login100-form-btn m-t-32">
					{% if installedBundles['VSPaymentBundle'] is defined %}
					    <a href="{{ path( 'vs_users_profile_show' ) }}" class="login100-form-btn mr-4">
                            Products
                        </a>
                    {% endif %}
                        <a href="{{ path( 'vs_users_profile_show' ) }}" class="login100-form-btn mr-4">
                            Profile
                        </a>
						<button id="btnLogout" data-url="{{ path( 'app_logout' ) }}" class="login100-form-btn">
							Logout
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
